model Workflows {
  id                String   @id @default(uuid())
  nodes             Node[]
  name              String
  publish           Boolean? @default(false)
  description       String
  lastRun           String?
  events            Event[]
  User              User     @relation(fields: [userId], references: [id])
  userId            String


  @@schema("workflow_schema")
}

model Node {
  id                String   @id @default(uuid())
  name              String?
  description       String?
  type              String?
  workflowId        String
  actionType        String?
  subActionType     String?
  actionData        Json?
  actionId          String?
  worklows          Workflows @relation(fields: [workflowId], references: [id])
  userId            String?
  User              User?     @relation(fields: [userId], references: [id])
  @@schema("workflow_schema")
}

model Event {
  id                String   @id @default(uuid())
  workflowId       String
  Workflows        Workflows @relation(fields: [workflowId], references: [id])
  status           String
 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@schema("workflow_schema")
}
