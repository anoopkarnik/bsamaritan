{
  "name": "personal-apps",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint -- --max-warnings 20",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "db:generate": "cd packages/prisma-db && npx prisma generate && cd ../..",
    "start-dashboard-app": "cd ./apps/dashboard-app && npm run start",
    "start-scheduler-app": "cd ./apps/scheduler-app && npm run start"
  },
  "exports": {
    "./zod": "./src/index.ts"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "prettier": "^3.2.5",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@10.5.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "install": "^0.13.0",
    "usehooks-ts": "^3.1.0"
  }
}
